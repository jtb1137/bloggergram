<div class="container py-3">
  <div class="card">
    <%= image_tag @post.image.url, class: "card-img-top" %>
    <div class="card-block p-2">
      <h4 class="card-title"><%= @post.title %></h4><p>by: <%= @post.user.username %></p>
      <p class="card-text"><%= @post.description %></p>
    </div>
    <div class="btn-group pl-2 pb-2">
      <% if @post.user.id == current_user.id %>
        <%= link_to "Edit", edit_post_path(@post), class: "btn btn-sm btn-outline-secondary" %>
        <%= link_to "Delete", post_path(@post.id), method: :delete, class: "btn btn-sm btn-outline-secondary" %>
      <% end %>
    </div>
    <ul class="list-group list-group-flush">
      <% @post.comments.each do |comment| %>
          <li class="list-group-item">
            <%= comment.comment %>
            <%= link_to "Delete", [comment.post, comment], method: :delete, class: "btn btn-sm btn-outline-secondary pull-right" %>
          </li>
      <% end %>
    </ul>
    <div class="card-block p-2">
      <%= render 'comments/form' %>
    </div>
  </div>
</div>